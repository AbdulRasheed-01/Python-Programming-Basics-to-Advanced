Exercise 1: Number Guessing Game

# exercise1_guess_game.py
"""
Number Guessing Game with Difficulty Levels
"""

import random

print("="*50)
print("NUMBER GUESSING GAME")
print("="*50)

# Select difficulty
print("\nSelect Difficulty:")
print("1. Easy (1-20, 10 attempts)")
print("2. Medium (1-50, 7 attempts)")
print("3. Hard (1-100, 5 attempts)")

difficulty = input("Choose difficulty (1-3): ")

if difficulty == "1":
    max_num = 20
    max_attempts = 10
elif difficulty == "2":
    max_num = 50
    max_attempts = 7
elif difficulty == "3":
    max_num = 100
    max_attempts = 5
else:
    print("Invalid choice. Using medium as default.")
    max_num = 50
    max_attempts = 7

# Generate secret number
secret = random.randint(1, max_num)
attempts = 0
guessed = False

print(f"\nI'm thinking of a number between 1 and {max_num}")
print(f"You have {max_attempts} attempts. Good luck!\n")

while attempts < max_attempts and not guessed:
    try:
        guess = int(input(f"Attempt {attempts + 1}/{max_attempts} - Your guess: "))
        attempts += 1
        
        if guess == secret:
            print(f"\nðŸŽ‰ Congratulations! You got it in {attempts} attempts!")
            guessed = True
        elif guess < secret:
            print("ðŸ“‰ Too low! Try a higher number.")
        else:
            print("ðŸ“ˆ Too high! Try a lower number.")
            
    except ValueError:
        print("âŒ Please enter a valid number.")

if not guessed:
    print(f"\nðŸ˜¢ Game Over! The number was {secret}.")
    
# Play again?
play_again = input("\nPlay again? (yes/no): ").lower()
if play_again == "yes":
    exec(open(__file__).read())  # Restart game
else:
    print("Thanks for playing!")


