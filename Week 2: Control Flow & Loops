Exercise 4: Prime Number Finder
# exercise4_primes.py
"""
Find prime numbers in various ways
"""

import math
import time

print("="*50)
print("PRIME NUMBER FINDER")
print("="*50)

def is_prime(n):
    """Check if a number is prime"""
    if n < 2:
        return False
    if n == 2:
        return True
    if n % 2 == 0:
        return False
    
    # Check only odd divisors up to sqrt(n)
    for i in range(3, int(math.sqrt(n)) + 1, 2):
        if n % i == 0:
            return False
    return True

# Find primes in a range
print("\n1. FIND PRIMES IN A RANGE:")
start = int(input("Enter start number: "))
end = int(input("Enter end number: "))

primes = []
start_time = time.time()

for num in range(start, end + 1):
    if is_prime(num):
        primes.append(num)

end_time = time.time()
print(f"\nPrimes between {start} and {end}:")
print(primes)
print(f"Found {len(primes)} primes in {end_time - start_time:.4f} seconds")

# First N primes
print("\n2. FIRST N PRIMES:")
n = int(input("How many primes do you want? "))

first_n_primes = []
num = 2
while len(first_n_primes) < n:
    if is_prime(num):
        first_n_primes.append(num)
    num += 1

print(f"First {n} primes: {first_n_primes}")

# Prime factorization
print("\n3. PRIME FACTORIZATION:")
number = int(input("Enter a number to factorize: "))
original = number
factors = []

divisor = 2
while divisor <= number:
    if number % divisor == 0:
        factors.append(divisor)
        number //= divisor
    else:
        divisor += 1

print(f"Factors of {original}: {factors}")

# Twin primes
print("\n4. TWIN PRIMES (pairs with difference 2):")
limit = int(input("Enter upper limit for twin primes: "))

twin_primes = []
for i in range(2, limit - 1):
    if is_prime(i) and is_prime(i + 2):
        twin_primes.append((i, i + 2))

print(f"Twin primes up to {limit}:")
for pair in twin_primes[:10]:  # Show first 10
    print(f"  {pair[0]} and {pair[1]}")
if len(twin_primes) > 10:
    print(f"  ... and {len(twin_primes) - 10} more")

# Performance comparison
print("\n5. PERFORMANCE COMPARISON:")
test_num = 999983  # A large prime

start = time.time()
result1 = is_prime(test_num)
time1 = time.time() - start

# Naive method (for comparison)
def is_prime_naive(n):
    if n < 2:
        return False
    for i in range(2, n):
        if n % i == 0:
            return False
    return True

start = time.time()
result2 = is_prime_naive(test_num)
time2 = time.time() - start

print(f"Testing if {test_num} is prime:")
print(f"  Optimized method: {result1}, took {time1:.6f} seconds")
print(f"  Naive method:     {result2}, took {time2:.6f} seconds")
print(f"  Speedup: {time2/time1:.1f}x faster!")

Output:

